{
  "name": "xbmc-ws",
  "version": "1.1.3",
  "main": "lib/xbmc-ws.js",
  "author": "Florian Albertz",
  "contributors": ["Links 2004"],
  "license": "BSD-3-Clause",
  "description": "A wrapper for the xbmc jsonrpc interface",
  "repository": {
    "type": "git",
    "url": "https://github.com/PaulAvery/node-xbmc-ws.git"
  },
  "keywords": [
    "xbmc",
    "jsonrpc",
    "json-rpc"
  ],
  "scripts": {
    "prepublish": "make lint"
  },
  "dependencies": {
    "ws": "~0.4.31",
    "jrpc-schema": "0.0.3"
  },
  "devDependencies": {
    "eslint": "^0.18.0",
    "version-bump": "^0.1.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "curly": [
        2,
        "multi-line"
      ],
      "quotes": [
        2,
        "single"
      ]
    },
    "ecmaFeatures": {
      "modules": true
    }
  }
}
